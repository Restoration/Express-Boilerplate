extends layout

block content
    h1= title
    p Welcome to #{title}
    p #{user_name}
    main#main
        form(
            method='POST'
            action='/login'
        )
            p
                input(
                    type="text"
                    name="username"
                    placeholder="Username"
                )
            p
                input(
                    type="text"
                    name="password"
                    placeholder="Password"
                )
            p
                input(
                    type="submit"
                    value="Send"
                )
